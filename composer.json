{
    "name": "lightster/upcrypto",
    "description": "Streamline runtime upgrade of cryptography",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lstr\\Upcrypto\\": "src/Lstr/Upcrypto/"
        }
    },
    "require": {
        "php": "^5.4.0 || ^7.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "codeclimate/php-test-reporter": "dev-master",
        "zendframework/zend-crypt": "~2.0",
        "defuse/php-encryption": "^2.1.0"
    },
    "suggest": {
      "zendframework/zend-crypt:~2.0": "Include Zend\\Crypt 2.x if using the ZendCrypt adapter",
      "defuse/php-encryption:^2.1.0": "Include Defuse if using the Defuse adapter"
    }
}
